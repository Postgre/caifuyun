<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="true"><shape>
            <solid android:color="@color/bg_home" />

            <stroke android:width="0.5dp" android:color="@color/bg_home" />

            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
        </shape></item>
    <item android:state_pressed="false" android:state_selected="false"><shape>
            <solid android:color="@color/white" />

            <stroke android:width="0.5dp" android:color="@color/bg_home" />

            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
        </shape></item>

</selector>