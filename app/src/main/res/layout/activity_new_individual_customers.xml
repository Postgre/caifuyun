<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sdk="http://com.zepan.android.sdk/apk/res-auto"
    xmlns:app="http://com.zepan.android.sdk/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head"
    android:orientation="vertical"
    tools:context="com.zepan.caifuyun.activity.NewIndividualCustomersActivity" >

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 机构名称 -->

                <LinearLayout
                    android:id="@+id/ly_organization"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="机构名称" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <com.zepan.android.widget.CheckableEditText
                            android:id="@+id/ed_organization"
                            style="@style/style7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请输入机构名称"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textColor="#CDC5B7" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginLeft="20dp" />
                <!-- 姓名 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_is_main"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="姓名" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <com.zepan.android.widget.CheckableEditText
                            android:id="@+id/ed_make_payment"
                            style="@style/style7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请输入客户姓名"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textColor="#CDC5B7" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginLeft="20dp" />

                <!-- 头像 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="头像" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <com.zepan.android.widget.AchievePhotoImageView
                            android:id="@+id/ai_avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="16dp"
                            android:background="@drawable/ic_form_add"
                            android:gravity="center_vertical"
                            app:cropShape="square"
                            app:photoDialogLayout="@layout/dialog_achieve_photo" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginLeft="20dp" />

                <!-- 成熟度 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="成熟度" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <RatingBar
                            android:id="@+id/rb_maturity"
                            style="@style/roomMoreRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:numStars="3"
                            android:stepSize="1" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginLeft="20dp" />
                <!-- 实力 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="实力" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <RatingBar
                            android:id="@+id/rb_power"
                            style="@style/roomMoreRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:numStars="3"
                            android:stepSize="1" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginLeft="20dp" />
                <!-- 风险偏好 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="风险偏好" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <RatingBar
                            android:id="@+id/rb_risk"
                            style="@style/roomMoreRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:numStars="3"
                            android:stepSize="1" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout style="@style/lines_d2d2d2" />
                <!-- 标签 -->

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="标签" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5" >

                        <TextView
                            android:id="@+id/tv_label"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="30dp"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:text="设置标签"
                            android:textColor="@color/B2B2B2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_arrow_right" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout style="@style/lines_d2d2d2" />

                <!-- 名片 -->

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="名片" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <com.zepan.android.widget.AchievePhotoImageView
                            android:id="@+id/ai_card"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="16dp"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/ic_form_add"
                            android:gravity="center_vertical"
                            app:cropShape="square"
                            app:photoDialogLayout="@layout/dialog_achieve_photo" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout style="@style/lines_d2d2d2" />

                <!-- 手机 -->

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="手机" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <com.zepan.android.widget.CheckableEditText
                            android:id="@+id/et_phone"
                            style="@style/style7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请输入手机号"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textColor="#CDC5B7" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout style="@style/lines_d2d2d2" />
                <!-- 邮箱 -->

                <FrameLayout
                    style="@style/lines_d2d2d2"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="邮箱" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5" >

                        <com.zepan.android.widget.CheckableEditText
                            android:id="@+id/et_email"
                            style="@style/style7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="请输入邮箱"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textColor="#CDC5B7" />
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout style="@style/lines_d2d2d2" />

                <include layout="@layout/include_info_one" />

                <include layout="@layout/include_info_two" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>