<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://com.zepan.android.sdk/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head"
    android:orientation="vertical"
    tools:context="com.zepan.caifuyun.activity.OrderActivity" >

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcfcfc"
        android:orientation="vertical"
        android:paddingLeft="16dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/tv_name"
                style="@style/tv_release_product"
                android:text="@string/name" />

            <TextView
                android:id="@+id/et_name"
                style="@style/style7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/tv_company"
                style="@style/tv_release_product"
                android:text="@string/company" />

            <TextView
                android:id="@+id/et_company_name"
                style="@style/style7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_company"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/mobile_phone"
                style="@style/tv_release_product"
                android:text="@string/mobile_phone" />

            <TextView
                android:id="@+id/et_mobile_phone"
                style="@style/style7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/mobile_phone"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp" >

            <TextView
                android:id="@+id/identity_card_photo"
                style="@style/tv_release_product"
                android:text="@string/identity_card_photo" />

            <com.zepan.android.widget.AchievePhotoImageView
                android:id="@+id/iv_identity_card_photo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/identity_card_photo"
                android:background="@drawable/ic_form_add"
                android:contentDescription="@null"
                android:gravity="center_vertical"
                app:cropShape="square"
                app:photoDialogLayout="@layout/dialog_achieve_photo" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/fcfcfc"
        android:paddingLeft="16dp" >

        <TextView
            android:id="@+id/headshot"
            style="@style/tv_release_product"
            android:text="@string/headshot" />

        <com.zepan.android.widget.AchievePhotoImageView
            android:id="@+id/iv_headshot"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/headshot"
            android:background="@drawable/ic_form_add"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            app:cropShape="square"
            app:photoDialogLayout="@layout/dialog_achieve_photo" />
    </RelativeLayout>

    <FrameLayout style="@style/lines_d2d2d2" />

    <Button
        android:id="@+id/submit_report"
        style="@style/style14_white"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:background="@drawable/select_home_btn"
        android:text="提交认证" />

</LinearLayout>