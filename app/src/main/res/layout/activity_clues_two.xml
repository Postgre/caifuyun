<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head"
    tools:context="com.zepan.caifuyun.activity.CluesTwoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/include_title"
            layout="@layout/include_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fcfcfc"
            android:padding="16dp" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@null"
                fresco:roundingBorderWidth="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical"
                android:paddingLeft="12dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/style393c3d_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <CheckBox
                        android:id="@+id/iv_star"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/selector_star_small_marked"
                        android:button="@null"
                        android:clickable="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_relation"
                        style="@style/style12_757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合伙人" />

                    <FrameLayout
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="#757575" />

                    <TextView
                        android:id="@+id/tv_position"
                        style="@style/style12_757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="副总裁" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_company"
                    style="@style/style12_757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中德证券股份公司" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="线索来源：" />

                    <TextView
                        android:id="@+id/tv_source"
                        style="@style/style10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宝马4s店" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布者：" />

                    <TextView
                        android:id="@+id/tv_other_name"
                        style="@style/style10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="景林" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/fcfcfc"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_mobile_phone"
                style="@style/tv_release_product"
                android:text="@string/mobile_phone"
                android:textColor="#aaaaaa" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_mobile_phone" >

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/style393c3d_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="13816715801" />

                <ImageView
                    android:id="@+id/iv_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_phone"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    android:src="@drawable/ic_action_message" />

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    android:src="@drawable/ic_action_call" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/fcfcfc"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/tv_work_email"
                style="@style/tv_release_product"
                android:text="工作邮箱"
                android:textColor="#aaaaaa" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_work_email" >

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/style393c3d_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="13816715801" />

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    android:src="@drawable/ic_share_mail" />
            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:id="@+id/rl_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/fcfcfc" >

            <TextView
                android:id="@+id/tv_label"
                style="@style/style5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="标签" />

            <TextView
                android:id="@+id/tv_tags"
                style="@style/style1988db_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:layout_toRightOf="@+id/tv_label"
                android:text="高尔夫" />

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingRight="8dp"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <FrameLayout
            style="@style/lines_d2d2d2"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/fcfcfc"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp" >

            <TextView
                style="@style/style5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注" />

            <TextView
                android:id="@+id/ed_note"
                style="@style/style393c3d_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginTop="6dp"
                android:background="@null" />
        </LinearLayout>

        <FrameLayout style="@style/lines_d2d2d2" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/RadioGroup_bottom"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_home"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rabtn_order"
            style="@style/style14_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_home_btn"
            android:button="@null"
            android:gravity="center"
            android:text="丢弃" />

        <com.zepan.caifuyun.widget.TransFrameLayout
            style="@style/lines_d2d2d2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <RadioButton
            android:id="@+id/rabtn_form"
            style="@style/style14_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_home_btn"
            android:button="@null"
            android:gravity="center"
            android:text="升级为客户" />
    </RadioGroup>

</RelativeLayout>