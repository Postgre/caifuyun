<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcfcfc"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@null"
                fresco:roundingBorderWidth="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical"
                android:paddingLeft="12dp" >

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/style393c3d_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/ly_partner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                       <!--  <TextView
                            android:id="@+id/tv_relation"
                            style="@style/style12_757575"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合伙人" />

                        <FrameLayout
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="#393c3d" />

                      -->
                        <TextView
                            android:id="@+id/tv_position"
                            style="@style/style12_757575"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                       
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_company"
                        style="@style/style12_757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_main_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style12_757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主要联系人" 
                        android:paddingRight="5dp"/>

                    <TextView
                        android:id="@+id/tv_mian_user"
                        style="@style/style12_757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_maturity"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="成熟度" />

                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:isIndicator="true"
                    android:numStars="3"
                    android:stepSize="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="实力" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:isIndicator="true"
                    android:numStars="3"
                    android:stepSize="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="风险偏好 " />

                <RatingBar
                    android:id="@+id/ratingBar3"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:isIndicator="true"
                    android:numStars="3"
                    android:stepSize="1" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout style="@style/lines_d2d2d2" />

    <RadioGroup
        android:id="@+id/RadioGroup_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_associates"
            style="@style/style14_393c3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_background"
            android:button="@null"
            android:gravity="center"
            android:text="其他联系人"
            android:textColor="@drawable/selector_check" />

        <FrameLayout
            style="@style/lines_horizontal_d2d2d2"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp" />

        <RadioButton
            android:id="@+id/rb_remind"
            style="@style/style14_393c3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_background"
            android:button="@null"
            android:gravity="center"
            android:text="提醒"
            android:textColor="@drawable/selector_check" />

        <FrameLayout
            style="@style/lines_horizontal_d2d2d2"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp" />

        <RadioButton
            android:id="@+id/rb_trading_record"
            style="@style/style14_393c3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_background"
            android:button="@null"
            android:gravity="center"
            android:text="交易历史"
            android:textColor="@drawable/selector_check" />

        <FrameLayout
            style="@style/lines_horizontal_d2d2d2"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp" />

        <RadioButton
            android:id="@+id/rb_details"
            style="@style/style14_393c3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_background"
            android:button="@null"
            android:gravity="center"
            android:text="详情"
            android:textColor="@drawable/selector_check" />
    </RadioGroup>

    <FrameLayout style="@style/lines_d2d2d2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/fcfcfc"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_mobile_phone"
            style="@style/tv_release_product"
            android:text="@string/mobile_phone"
            android:textColor="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/tv_mobile_phone" >

            <TextView
                android:id="@+id/tv_phone"
                style="@style/style393c3d_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="" />

            <ImageView
                android:id="@+id/iv_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_phone"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/ic_action_message" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/ic_action_call" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/fcfcfc"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/tv_work_email"
            style="@style/tv_release_product"
            android:text="工作邮箱"
            android:textColor="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/tv_work_email" >

            <TextView
                android:id="@+id/tv_emai"
                style="@style/style393c3d_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="" />

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/ic_share_mail" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout style="@style/lines_d2d2d2" />

    <RelativeLayout
        android:id="@+id/rl_lable"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/fcfcfc" >

        <TextView
            android:id="@+id/tv_label"
            style="@style/style5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="标签" />

        <TextView
            android:id="@+id/tv_tags"
            style="@style/style1988db_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow_right"
            android:layout_toRightOf="@+id/tv_label"
            android:text="高尔夫" />

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingRight="8dp"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d2d2d2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcfcfc"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/follow_up_records"
                style="@style/style5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟进记录" />

            <TextView
                android:id="@+id/follow_up_records_num"
                style="@style/style5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/follow_up_records"
                android:paddingLeft="4dp"
                android:text="12" />
        </RelativeLayout>

        <!-- listview   的item -->

        <include
            layout="@layout/listitem_individualcustomer"
            android:visibility="gone" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            
             />
    </LinearLayout>

</LinearLayout>