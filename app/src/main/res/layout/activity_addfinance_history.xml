<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.zepan.caifuyun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head"
    android:orientation="vertical"
     >

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcfcfc"
        android:orientation="vertical"
        android:paddingLeft="16dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/tv_product"
                style="@style/tv_release_product"
                android:text="@string/tv_product" />

            <TextView
                android:id="@+id/et_product_name"
                style="@style/style7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_product"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="输入产品名称"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/tv_start_time"
                style="@style/tv_release_product"
                android:text="开始日期" />

            <TextView
                android:id="@+id/et_start_time"
                style="@style/style7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_start_time"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="选择开始日期"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/tv_end_time"
                style="@style/tv_release_product"
                android:text="结束日期" />

            <TextView
                android:id="@+id/et_end_time"
                style="@style/style7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_end_time"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="选择结束日期"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/fcfcfc" >

            <com.zepan.android.widget.CheckableEditText
                android:id="@+id/ed_make_payment"
                style="@style/style7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@+id/wan"
                android:layout_toRightOf="@+id/tv_finance"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="输入理财金额"
                android:maxLength="20"
                android:singleLine="true" />

            <TextView
                android:id="@+id/wan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="万" />

            <TextView
                android:id="@+id/tv_finance"
                style="@style/tv_release_product"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="理财金额" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/fcfcfc"
        android:paddingLeft="16dp" >

        <com.zepan.android.widget.CheckableEditText
            android:id="@+id/ed_make"
            style="@style/style7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="22dp"
            android:layout_toLeftOf="@+id/wan1"
            android:layout_toRightOf="@+id/tv"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="输入预期收益金额"
            android:maxLength="20"
            android:singleLine="true" />

        <TextView
            android:id="@+id/wan1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:text="万" />

        <TextView
            android:id="@+id/tv"
            style="@style/tv_release_product"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="预期收益" />
    </RelativeLayout>

    <FrameLayout style="@style/lines_d2d2d2" />

    <Button
        android:id="@+id/btn_save"
        style="@style/style14_white"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:background="@drawable/select_home_btn"
        android:text="@string/save" />

</LinearLayout>