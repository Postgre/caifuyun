<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
    <!-- 群聊的通讯录 -->
   
   <RelativeLayout
       android:id="@+id/ly_salesjournal_title"
       android:layout_width="match_parent"
       android:layout_height="56.5dp"
       android:background="@color/head"
       
       >
       <com.zepan.android.widget.AlphaImageView
           android:id="@+id/iv_back"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:src="@drawable/ic_action_back"
           android:layout_alignParentLeft="true"
           android:padding="10dp"
           android:onClick="click"
           />
       <TextView 
           android:id="@+id/title"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="@string/personalcontacts"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:textSize="17sp"
           />
       <LinearLayout 
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_alignParentRight="true"
           android:orientation="horizontal"
            android:padding="10dp"
            
           >
        <TextView
           android:id="@+id/tv_sure"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="@string/btn_ok"
           android:gravity="center"
         />
       <TextView
           android:id="@+id/sure_num"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text=""
           android:layout_marginLeft="5dp"
           android:visibility="visible"
           android:gravity="center"
        />
       </LinearLayout>
       
   </RelativeLayout>
   <FrameLayout
       
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d2d2d2" />
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/head"
       android:padding="10dp"
       android:focusable="true" 
       android:focusableInTouchMode="true" 
       >
       <com.zepan.android.widget.CheckableEditText
            android:id="@+id/et_input_recode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_shape"
            android:drawableLeft="@drawable/ic_action_search_more"
            android:hint="搜索"
            android:paddingLeft="120dp"
            android:minHeight="30dp"
            android:textSize="14sp" />
       
       
   </LinearLayout>
   <ListView 
           android:id="@+id/group_contacts_list"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           
  ></ListView>
   
 </LinearLayout>  
