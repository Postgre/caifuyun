<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fcfcfc"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_person_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@null"
            fresco:roundingBorderWidth="1dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/iv_person_head"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_person_name"
                style="@style/style393c3d_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tv_person_position"
                style="@style/styleaaaaaa_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="" />

            <TextView
                android:id="@+id/tv_person_company"
                style="@style/styleaaaaaa_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/styleaaaaaa_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成熟度" />

                <RatingBar
                    android:id="@+id/rb_person_ratingBar1"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:numStars="3" 
                    android:isIndicator="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        style="@style/lines_E7E7E7"
        android:layout_marginLeft="16dp" />

</LinearLayout>