<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head"
    android:orientation="vertical" >

    <!-- 报单的litem -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcfcfc"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/style393c3d_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="4dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:singleLine="true"
                android:text="民泰资产——锦越6号" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/styleaaaaaa_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingTop="16dp"
                android:text="信托" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp" >

            <TextView
                android:id="@+id/tv_time_start"
                style="@style/styleaaaaaa_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="2015-6-11" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/styleaaaaaa_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="至" />

            <TextView
                android:id="@+id/tv_time_end"
                style="@style/styleaaaaaa_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-6-11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/styleaaaaaa_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="客户：" />

                <TextView
                    android:id="@+id/tv_customer_name"
                    style="@style/style757575_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="林泽云" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/styleaaaaaa_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="交易金额：" />

                <TextView
                    android:id="@+id/tv_reservation_amount"
                    style="@style/style757575_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="100" />

                <TextView
                    style="@style/style757575_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="万" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp" >

            <TextView
                style="@style/styleaaaaaa_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渠道：" />

            <TextView
                android:id="@+id/tv_ditch_name"
                style="@style/style757575_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王汨" />
        </LinearLayout>

        <FrameLayout style="@style/lines_E7E7E7" />
    </LinearLayout>

</LinearLayout>