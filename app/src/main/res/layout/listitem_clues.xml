<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_background"
    android:orientation="vertical"
    android:paddingLeft="16dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" >

        <LinearLayout
            android:id="@+id/ly_left"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                style="@style/style393c3d_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐海" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/style393c3d_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13816715801" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ly_left"
            android:orientation="vertical"
            android:paddingRight="16dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_position"
                    style="@style/style12_757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="销售部经理" />

                <CheckBox
                    android:id="@+id/iv_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_star_small_marked"
                    android:button="@null"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/selector_star_small_marked" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_company"
                style="@style/style12_757575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中德股份有限公司" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签：" />

                <TextView
                    android:id="@+id/tv_tags"
                    style="@style/style1988db_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="线索来源：" />

                <TextView
                    android:id="@+id/tv_source"
                    style="@style/style10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签  标签  标签" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        style="@style/lines_d2d2d2"
        android:layout_marginTop="12dp" />

</LinearLayout>