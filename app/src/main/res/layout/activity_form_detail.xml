<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://com.zepan.android.sdk/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head"
    android:orientation="vertical"
    tools:context="com.zepan.caifuyun.adapter.FormDetailActivity" >

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcfcfc"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" >

            <LinearLayout
                android:id="@+id/ly_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/style393c3d_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="民泰资产——锦越6号" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/styleaaaaaa_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="信托" />

                    <TextView
                        android:id="@+id/tv_company"
                        style="@style/styleaaaaaa_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_type"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:singleLine="true"
                        android:text="信托有限公司" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="12dp" >

            <TextView
                android:id="@+id/tv_customer"
                style="@style/tv_release_product"
                android:text="客户" />

            <TextView
                android:id="@+id/tv_customer_name"
                style="@style/style1988db_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_customer"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp" >

            <TextView
                android:id="@+id/tv_amount_money"
                style="@style/tv_release_product"
                android:text="打款金额" />

            <TextView
                android:id="@+id/tv_amount_money_num"
                style="@style/style393c3d_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_amount_money"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="100" />

            <TextView
                android:id="@+id/tv_wan"
                style="@style/style393c3d_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_amount_money_num"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:singleLine="true"
                android:text="万" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp" >

            <TextView
                android:id="@+id/tv_ditch"
                style="@style/tv_release_product"
                android:text="渠道" />

            <TextView
                android:id="@+id/tv_ditch_name"
                style="@style/style393c3d_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_ditch"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp" >

            <TextView
                android:id="@+id/contract_signature_page"
                style="@style/tv_release_product"
                android:text="@string/contract_signature_page" />

            <com.zepan.android.widget.AchievePhotoImageView
                android:id="@+id/iv_contract_signature_page"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/contract_signature_page"
                android:background="@drawable/ic_form_add"
                android:contentDescription="@null"
                android:gravity="center_vertical"
                app:cropShape="square"
                app:photoDialogLayout="@layout/dialog_achieve_photo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp" >

            <TextView
                android:id="@+id/receipt"
                style="@style/tv_release_product"
                android:text="@string/receipt" />

            <com.zepan.android.widget.AchievePhotoImageView
                android:id="@+id/iv_receipt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/receipt"
                android:background="@drawable/ic_form_add"
                android:contentDescription="@null"
                android:gravity="center_vertical"
                app:cropShape="square"
                app:photoDialogLayout="@layout/dialog_achieve_photo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:background="@color/fcfcfc" >

            <TextView
                android:id="@+id/bank_card"
                style="@style/tv_release_product"
                android:text="@string/bank_card" />

            <com.zepan.android.widget.AchievePhotoImageView
                android:id="@+id/iv_bank_card"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/bank_card"
                android:background="@drawable/ic_form_add"
                android:contentDescription="@null"
                android:gravity="center_vertical"
                app:cropShape="square"
                app:photoDialogLayout="@layout/dialog_achieve_photo" />
        </RelativeLayout>

        <FrameLayout style="@style/lines_d2d2d2" />
    </LinearLayout>

</LinearLayout>